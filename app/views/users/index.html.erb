
<div id="container">
  
<h1>Users</h1>
<table class="apttable">
  <tr>
    <th>Nick</th>
    <th>Name</th>
    <th>Surname</th>
    <th>Authorities</th>
    <th>Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nick%></td>
    <td><%= user.name %></td>
    <td><%= user.surname %></td>
    <td><%= user.role.name %></td>
    <td class="controls">
      <%= link_to image_tag("/images/button_edit.png"), edit_user_path(user)%>
    </td>
  </tr>
<% end %>
</table>

<%= will_paginate @users %>
<br />
<table class="controls">
    <td>
      <%= button_to 'New User', new_user_path, :method => :get %>
    </td>
</table>

  </div>
  <div id="footer"> APT Tracker </div>