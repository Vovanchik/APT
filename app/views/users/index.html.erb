<h1>Listing users</h1>
<table class="actionpoints">
  <tr>
    <th>Nick</th>
    <th>Name</th>
    <th>Surname</th>
    <th>Authorities</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nick %></td>
    <td><%= user.name %></td>
    <td><%= user.surname %></td>
    <td><%= user.role.name %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New User', new_user_path, :method => :get %>
