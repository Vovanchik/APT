<% flash.each do |type, messages| %>
  <%  messages.each do |message|%>
    <div id="<%= type %>">
      <p><%= message%></p>
    </div>
  <% end %>
<% end %>


<p>
  <b>Name:</b>
  <%= @forum.name %>
</p>

<p>
  <b>Author:</b>
  <%= @forum.author.nick %>
</p>

<p>
  <b>Action Points:</b>
</p>
<table border="1" frame="box" cellspacing="1" >
  <tr>
    <th>AP # </th>
    <th>Author</th>
    <th>Job number</th>
    <th>Description</th>
    <th>Status</th>
    <th>Handlers</th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= link_to job.id , forum_job_path(@forum,job) %></td>
    <td><%= job.author.nick %></td>
    <td><%= job.job_number %></td>
    <td><%= job.description %></td>
    <td><%= job.status %></td>
    <td>
    <%job.handlers. each do |handler|%>
      <%=handler.nick%>
    <%end %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'New action point', new_forum_job_path(@forum) %>
<%= link_to 'Back', forums_path %>
