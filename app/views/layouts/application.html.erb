<!DOCTYPE html>
<html>
<head>
  <title>APT</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<% if current_user %>

<div id="slantedmenu">
 <ul>
  <li><%= link_to'New AP' , jobs_path%></li>
  <li><%= link_to'My AP', current_user%></li>
  <li><%= link_to'Free AP', current_user%></li>
  <li><%= link_to'Private AP', current_user%></li>
  <li><%= link_to'New Forum', new_forum_path%></li>
  <li><%= link_to'My Forums', forums_path%></li>
    <%if current_user.role? :super_user%>
  <li> <%= link_to "Users", users_path%></li>
    <%end%>
 </ul>
</div>
  
  <table class="tablelogin">

    <tr>
      <th>
        <%if current_user.role? :super_user%>
          <%=  "Greetings Master" %>
        <%else%>
          <%=  "Hello #{current_user.name}." %>
        <%end%>
      </th>
    </tr>
    <tr>
      <td>
       <%= link_to "Edit Profile", edit_user_path(current_user.id)%>
      </td>
    </tr>
    <tr>
      <td>
       <%= button_to "Logout", :logout %>
      </td>
    </tr>

  </table>

  
<% end %>

<%= yield %>

</body>
</html>
