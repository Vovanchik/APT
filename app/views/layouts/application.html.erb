<!DOCTYPE html>
<html>
<head>
  <title>APT</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="nav">
  <% if current_user %>
    <%=  "Signed in as #{current_user.nick}. Not you?" %>
    <%= link_to "Edit Profile", edit_user_path(current_user.id)%>
    <%= link_to "Logout", :logout %>
  <% else %>
    <%= link_to "Register", new_user_path%>
  <% end %>
</div>



<%= yield %>

</body>
</html>
