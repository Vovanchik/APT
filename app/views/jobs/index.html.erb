<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Forum</th>
    <th>Job number</th>
    <th>Description</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.author_id %></td>
    <td><%= job.forum_id %></td>
    <td><%= job.job_number %></td>
    <td><%= job.description %></td>
    <td><%= job.status %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

